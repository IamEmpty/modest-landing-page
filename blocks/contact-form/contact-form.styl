.contact-form
  background white
  width 555px
  height 400px
  overflow hidden
  border-radius 3px
  position relative
  top -1px
  margin 0 0 0 0

.contact-form__name
  background #eaeef1
  width 100%
  line-height 44px
  width 240px
  height 44px
  border-radius 3px
  margin 0 0 30px 0

.contact-form__email
  background #eaeef1
  width 100%
  line-height 44px
  width 240px
  height 44px
  border-radius 3px
  margin 0 0 30px 15px

.contact-form__message
  width 495px
  height 159px
  border-radius 3px
  background #eaeef1

.contact-form__input
  border-radius 3px
  background #fff
  width 240px
  height 44px
  float left
  color #eaeef1
  border-radius 3px
  margin 0 0 0 30px

.contact-form__textarea
  width 495px
  height 159px
  border-radius 3px
  margin 0 0 0 30px

.txt1
  color #8d8f92
  text-align left
  background #fff
  text-transform uppercase
  font-family 'Quattrocento Sans', 'sans-serif'
  font-size 14px
  font-weight 700
  margin 0 0 10px 6px

.txt2
  color #8d8f92
  text-align left
  background #fff
  text-transform uppercase
  font-family 'Quattrocento Sans', 'sans-serif'
  font-size 14px
  font-weight 700
  margin 0 0 10px 183px

.txt3
  color #8d8f92
  background #fff
  font-family 'Quattrocento Sans', 'sans-serif'
  font-size 14px
  font-weight 700
  float left
  text-transform uppercase
  margin 0 0 10px 7px

.txt4
  color white
  text-transform uppercase

.contact-form__send-message
  border-radius 3px
  background-color  #23b7a4
  width 147px
  height 40px
  border none
  cursor pointer
  margin 47px 0 0 32px
